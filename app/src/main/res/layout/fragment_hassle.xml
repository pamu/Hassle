<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/hassle_red"
    tools:context="com.iit_mandi.android.hassle.HassleActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="@string/hassle_activity_headline"
            android:textSize="30sp"
            android:textColor="@color/hassle_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic"
            android:id="@+id/heading" />
    </LinearLayout>

    <GridView
        android:id="@+id/grid_day_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </GridView>



</LinearLayout>
